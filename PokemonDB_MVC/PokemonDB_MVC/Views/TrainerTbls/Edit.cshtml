@model PokemonDB_MVC.Models.TrainerTbl

@{
    ViewBag.Title = "Edit";
}
<div class="main-section">
    <h2>Edit Card</h2>
    <br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TrainerID)

            <div class="form-group">
                Your Name
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TrainerName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TrainerName, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />

            <div class="form-group">
                Gender
                <div class="col-md-10">
                    <div class="editor-field">
                        @Html.DropDownList("Gender", new List<SelectListItem>{
                        new SelectListItem{ Text="Male", Value="Male"},
                        new SelectListItem{ Text="Female", Value="Female"}
                        }, "--- Select ---"
                        )
                    </div>
                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />

            <div class="form-group">
                Favourite Pokémon
                <div class="col-md-10">
                    @Html.DropDownList("PokedexNo", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PokedexNo, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
        <br />

    }
    <br />
    <br />


    <div>
        @Html.ActionLink("Go back", "Index", new object { }, new { @class = "trainer-action-controls" })
    </div>
</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
